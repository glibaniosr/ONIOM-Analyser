    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File without Arg",
            "type": "python",
            "request": "launch",            
            "program": "${file}",

        },
        {
            "name": "Python onal with Arg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/onal.py",//"${file}",
            "args": [
                "-lout_example.log",
                "-itemplate_example.txt",
                "-oonal.out.txt"
           ]
        },
        {
            "name": "Python onal_inp with Arg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/onal_inp.py",//"${file}",
            "args": [
                "-pprep.txt",
                "-aappend.txt",
                "-g135"
           ]
        },
        {
            "name": "Python: All debug Options",
            "type": "python",
            "request": "launch",
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "module": "module.name",
            "env": {
                "VAR1": "1",
                "VAR2": "2"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "arg1",
                "arg2"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}